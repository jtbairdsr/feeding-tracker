{
	"root": true,
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"globals": {
		"angular": true
	},
	"rules": {
		"quotes": [1, "single"],
		"eol-last": 1,
		"no-multi-spaces": [
			1, {
				"exceptions": {
					"VariableDeclarator": true,
					"ImportDeclaration": true,
					"Property": true
				}
			}
		],
		"no-trailing-spaces": 1,
		"new-cap": [1, {
			"capIsNewExceptionPattern": "^Sequelize\\.."
		}],
		"camelcase": 1,
		"eqeqeq": 1,
		"no-use-before-define": [2, "nofunc"],
		"semi": 1,
		"arrow-body-style": 1,
		"brace-style": [1, "1tbs"],
		"curly": 1
	}
}